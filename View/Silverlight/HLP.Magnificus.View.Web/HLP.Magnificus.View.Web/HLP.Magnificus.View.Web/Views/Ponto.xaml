            <Border.Effect>
                <DropShadowEffect/>
            </Border.Effect>
        </Border>
        <Image Grid.Column="5" Grid.Row="11" Grid.RowSpan="9" Stretch="Fill" Source="{Binding currentModel.imgFoto, Converter={StaticResource convToBitmap}}" />
